{
  "name": "pos-electron",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "Abraham David Rodriguez Martinez"
  },
  "homepage": ".",
  "dependencies": {
    "dotenv": "^16.5.0",
    "mssql": "^11.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-scripts": "^5.0.1"
  },
  "scripts": {
    "start": "concurrently \"npm run react-start\" \"npm run electron\"",
    "react-start": "BROWSER=none react-scripts start",
    "electron": "tsc -p src/electron && electron dist/electron/main.js",
    "build": "npm run react-build && npm run electron-build",
    "react-build": "react-scripts build && mkdir -p dist/renderer && cp -r build/* dist/renderer/",
    "electron-build": "tsc -p src/electron && electron-builder",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.corewave.pos",
    "productName": "ElectronPOS",
    "asarUnpack": [
      "**/*.node"
    ],
    "files": [
      "dist/electron/**/*",
      "dist/renderer/**/*",
      "!**/*.map",
      "!**/*.ts",
      "!**/*.tsx",
      "!**/*.d.ts",
      "!**/*.log",
      "!dist/renderer/static/js/*.map",
      "!dist/renderer/static/css/*.map",
      "!node_modules/.cache"
    ],
    "directories": {
      "buildResources": "dist/renderer"
    },
    "asar": true,
    "extraMetadata": {
      "main": "dist/electron/main.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/electron": "^1.4.38",
    "@types/mssql": "^9.1.7",
    "@types/node": "^22.13.5",
    "concurrently": "^9.1.2",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.26.1"
  }
}
